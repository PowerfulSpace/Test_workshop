@model Product
@{
    string currentModel = Helper.GetTypeName(Model.GetType().ToString());
    ViewData["Title"] = @currentModel + " Details";
}

<h1>@currentModel Details</h1>

<form>
    <div class="col-4">
        <div class="form-group">
            <label asp-for="Code" class="control-label"></label>
            <input asp-for="Code" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Cost" class="control-label"></label>
            <input asp-for="Cost" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="UnitId" class="control-label"></label>
            <input asp-for="@Model.Unit.Name" class="form-control" readonly />
        </div>
        <div class="btn-group">
            <a class="btn btn-primary" asp-action="Edit" asp-route-code="@Model.Code">Edit</a>
            <a class="btn btn-secondary" asp-action="Index" asp-route-currentPage="@TempData.Peek("CurrentPage")">Back</a>
        </div>
    </div>
</form>
